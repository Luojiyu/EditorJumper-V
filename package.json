{
  "name": "jumpeditor",
  "displayName": "JumpEditor",
  "description": "A VS Code extension that allows you to seamlessly jump between JetBrains IDEs and other popular code editors (such as VS Code, Cursor, Trae, and Windsurf). It maintains your cursor position and editing context, greatly improving development efficiency in multi-editor environments.",
  "version": "1.0.0",
  "publisher": "wanniwa",
  "repository": {
    "type": "git",
    "url": "https://github.com/wanniwa/JumpEditor-V"
  },
  "bugs": {
    "url": "https://github.com/wanniwa/JumpEditor-V/issues"
  },
  "homepage": "https://github.com/wanniwa/JumpEditor-V#readme",
  "engines": {
    "vscode": "^1.81.0"
  },
  "icon": "image/png/pluginIcon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "intellij",
    "idea",
    "jetbrains",
    "jump",
    "open",
    "editor",
    "cursor",
    "trae",
    "windsurf"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jumpeditor.openInJetBrains",
        "title": "Open in JetBrains IDE"
      },
      {
        "command": "jumpeditor.selectJetBrainsIDE",
        "title": "Select JetBrains IDE"
      },
      {
        "command": "jumpeditor.configureIDE",
        "title": "Configure JumpEditor"
      }
    ],
    "keybindings": [
      {
        "command": "jumpeditor.openInJetBrains",
        "key": "shift+alt+o"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "jumpeditor.openInJetBrains",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "jumpeditor.openInJetBrains",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "JumpEditor",
      "properties": {
        "jumpeditor.selectedIDE": {
          "type": "string",
          "default": "IDEA",
          "description": "Currently selected JetBrains IDE"
        },
        "jumpeditor.ideConfigurations": {
          "type": "array",
          "default": [
            {
              "id": "IDEA",
              "name": "IDEA",
              "type": "IDEA",
              "command": "/Applications/IntelliJ IDEA.app/Contents/MacOS/idea",
              "visible": true
            },
            {
              "id": "WebStorm",
              "name": "WebStorm",
              "type": "WebStorm",
              "command": "/Applications/WebStorm.app/Contents/MacOS/webstorm",
              "visible": true
            },
            {
              "id": "PyCharm",
              "name": "PyCharm",
              "type": "PyCharm",
              "command": "/Applications/PyCharm.app/Contents/MacOS/pycharm",
              "visible": true
            }
          ],
          "description": "Configured JetBrains IDEs",
          "items": {
            "type": "object",
            "required": [
              "id",
              "name",
              "type",
              "command",
              "visible"
            ],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the IDE"
              },
              "name": {
                "type": "string",
                "description": "Display name for the IDE"
              },
              "type": {
                "type": "string",
                "enum": [
                  "IDEA",
                  "WebStorm",
                  "PyCharm",
                  "GoLand",
                  "CLion",
                  "PhpStorm",
                  "RubyMine",
                  "Rider",
                  "Android",
                  "Custom"
                ],
                "description": "Type of the IDE"
              },
              "command": {
                "type": "string",
                "description": "Command or path to open the IDE"
              },
              "visible": {
                "type": "boolean",
                "description": "Whether to show this IDE in the selection menu",
                "default": true
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.24",
    "@types/vscode": "^1.81.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.0",
    "eslint": "^9.22.0"
  }
}
